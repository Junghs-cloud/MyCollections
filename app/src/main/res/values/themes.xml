<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyCollections" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="Theme.MyCollections" parent="Base.Theme.MyCollections" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="ownSpinnerTheme" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/beige</item>
    </style>
</resources>